<% subgoals.each do |subgoal| %>
<%= form_for ([goal, subgoal]), { remote: true } do |f| %>
  <div class="subgoal-each__container">
    <div class="subgoal-checkbox__container">
      <input type="checkbox" <%= subgoal.completed ? "checked" : "" %> >
    </div>

    <div class="subgoal-title__container">
      <div class="subgoal-title__text"><%= subgoal.title %></div>
      <!-- <input class="input subgoal-title__input" type="text" value="<%= subgoal.title %>"> -->
      <%= f.text_field :title, :class => 'input subgoal-title__input' %>
    </div>

    <div class="subgoal-edit__container">
      <a class="subgoal-edit__link" href="">Edit</a>

      <%= f.submit "SAVE", :class => 'subgoal-save__link' %>
    </div>
<% end %>
    <div class="subgoal-delete__container">
      <%= link_to "Delete", goal_subgoal_path(subgoal.goal_id, subgoal.id), :method => 'delete', :remote => true, :class => "what" %>
    </div>

  </div>
<% end %>
