
<script type = "text/javascript">
$(document).ready(function(){
  _.templateSettings = {
    interpolate: /\{\{\=(.+?)\}\}/g,
    evaluate: /\{\{(.+?)\}\}/g
};
var template = _.template(
  $( "#goals_list").html()
);
$.ajax({
  url: "/goals",
  dataType: "json",
  cache: false,
  success: function(data){
    _.each(data, function(goal){
      console.log(goal)
        $('#all_goals').append(template( goal ))
    })
  }
});
});
</script>
