<h1>Login</h1>
<div class="signup_container">

<%= form_tag login_path, :class => 'form' do %>
  <%= label_tag :email, nil, :class => 'label' %>
  <%= text_field_tag :email, nil, :class => 'input' %>

  <%= label_tag :password,nil, :class => 'label' %>
  <%= password_field_tag :password, nil, :class => 'input' %>

  <div class="btn-container" class="amount">
  <%= submit_tag "Login/Sign Up", :class => 'btn' %>
</div>
<% end %>
</div>
