<!DOCTYPE html>
<html>

  <head>
    <title>Buddyup</title>
    <meta charset="UTF-8">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

  </head>
  <body>

    <header class="header">
      <div class="header-logo__container">
        <a href="<%= root_path %>">
          <img class="header-logo__image" src="/assets/logo-orange-1.png" alt="BuddyUP">
        </a>
      </div>
      <nav class="nav__container">
        <ul class="nav-list">
          <li class="nav-list__item"><%= link_to 'Home', root_path %></li>
          <li class="nav-list__item"><%= link_to 'Goals', goals_path %></li>
        </ul>
      </nav>
    </header>

    <div class="main container">
      <%= yield %>
    </div>

  </body>
</html>
