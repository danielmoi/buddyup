<!DOCTYPE html>
<html>

  <head>
    <title>Buddyup</title>
    <meta charset="UTF-8">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <header class="header">
      <div class="header-logo__container">
        <a href="<%= root_path %>">
          <img class="header-logo__image" src="/assets/logo-orange-1.png" alt="BuddyUP">
        </a>
      </div>
      <nav class="nav__container">
        <ul class="nav-list">
          <li class="nav-list__item"><%= link_to 'Home', root_path %></li>
          <li class="nav-list__item"><%= link_to 'Goals', goals_path %></li>

          <!--  Conditional links -->
          <!--  User is logged in-->
          <% if @current_user.present? %>

          <!--  User is admin -->
          <% if @current_user.admin? %>
          <li class="nav-list__item"><%= link_to 'All Users', users_path %></li>
          <% end %>

          <li class="nav-list__item"><%= link_to "Logout #{@current_user.email}", login_path, :method => :delete %></li>

          <li class="nav-list__item">
            <%= link_to "Edit Profile", users_edit_path(@current_user) %></li>

          <!--  User is not logged in -->
        <% else %>
          <li class="nav-list__item"><%= link_to "Sign up", signup_path %></li>
          <li class="nav-list__item"><%= link_to "Login", login_path %></li>
          <% end %>

        </ul>
      </nav>
    </header>

    <% if flash[:error].present? %>
    <h2>
      class="error"
      <%= flash[:error] %>
    </h2>
    <% end %>

    <div class="main container">
      <%= yield %>
    </div>

  </body>

</html>
