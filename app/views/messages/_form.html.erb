<%= form_for ([@goal, @message]) do |f| %>

  <fieldset>
    <%= f.label :subject, :class => 'label' %>
    <%= f.text_field :subject, :class => 'input' %>
  </fieldset>

  <fieldset>
    <%= f.label :content, :class => 'label' %>
    <%= f.text_field :content, :class => 'input' %>
  </fieldset>

  <div class="btn-container">
    <%= f.submit "Create Message", :class => 'btn' %>
  </div>

<% end %>
