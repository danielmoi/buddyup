<%= form_for categories_path(@category), url: {action: "create"} do |f| %>

  <fieldset>
    <%= f.label :title, :class => 'label' %>
    <%= f.text_field :title, :class => 'input' %>
  </fieldset>

  <div class="btn-container">
    <%= f.submit "Create Category", :class => 'btn' %>
  </div>

<% end %>
