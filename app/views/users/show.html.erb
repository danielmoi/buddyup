<h1 class="main__title">
  Welcome <%= @user.name.titleize %>
</h1>

<div class="profile-each__container">
  <div class="profile-each__user-name">
    <%= image_tag(@user.image_url, :crop => :fill) %>
  </div>
  <div class="profile-each__user-location">
    Location:
    <%= @user.city %>, <%= @user.country %>
  </div>
  <div class="profile-each__user-bio">
    About me:
    <%= @user.bio %>
  </div>
</div>

<div class="btn-container">
  <%= link_to "Edit Profile", users_edit_path, :class => 'btn' %>
</div>

<div class="goals__container">
  <div class="profile-each__goals-title">
    <h2>Goals</h2>
  </div>
  <div class="profile-each__goals-uncompleted">
    <h2>In progress:</h2>
    <% @goals.each do |g| %>
      <% if g.achieved == false %>
        <h3><%= link_to g.title, g %></h3>
      <% end %>
      <h2>Achieved:</h2>
      <% if g.achieved %>
        <h3><%= link_to g.title, g %></h3>
      <% end %>
    <% end %>
  </div>
</div>

<div class="quote__container">
  <div class="quote-each__quote">
    "Do something today that your future self will thank you for"
  </div>
</div>
