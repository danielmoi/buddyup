<h1>Profile</h1>

<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
<p>Bio: <%= @user.bio %></p>
<p>Country: <%= @user.country %></p>
<p>City: <%= @user.city %></p>

<p>Profile Pic:
  <%= cl_image_tag(@user.image_url) %>
</p>

<div class="btn-container">
  <%= link_to "Edit Profile", users_edit_path, :class => 'btn' %>
</div>
