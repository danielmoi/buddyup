<h1 class="main__title">
  Welcome <%= @user.name.titleize %>
</h1>

<div class="user-each__container">
  <div class="user-each__user-pic">
    <%= image_tag(@user.image_url, :crop => :fill, :class => "user-each__user-pic") %>
  </div>
  <div class="user-each__user-bio">
    About me:
    <%= @user.bio %>
  </div>
  <div class="user-each__user-location">
    Location:
    <%= @user.city %>, <%= @user.country %>
  </div>
</div>

<div class="btn-container">
  <%= link_to "Edit Profile", users_edit_path, :class => 'btn' %>
</div>

<div class="goals__container">
  <div class="user-each__goals-title">
    <h1 class="goals__title">Goals</h2>
  </div>
  <div class="user-each__goals-uncompleted">
    <h3>In progress</h3>
    <% @goals.each do |g| %>
      <% if g.achieved == false %>
        <p class="user-each__goals-uncompleted-link"><%= link_to g.title, g %></p>
      <% end %>
    <% end %>
  </div>
  <div class="user-each__goals-completed">
    <h3>Achieved</h3>
    <% @goals.each do |g| %>
      <% if g.achieved %>
        <h3 class="user-each__goals-complet-link"><%= link_to g.title, g %></h3>
      <% end %>
    <% end %>
  </div>
</div>

<div class="quote__container">
  <div class="quote-each__quote">
    "Do something today that your future self will thank you for"
  </div>
</div>
