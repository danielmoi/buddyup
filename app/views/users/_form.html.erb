<div class="signup_container">
  <%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :bio %>
    <%= f.text_field :bio %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password_digest %>

    <%= f.label :image %>
    <%= f.text_field :image_url %>

    <%= f.submit "Submit" %>
  <% end %>
</div>
